  "sass": "^1.26.10"
 },
 "devDependencies": {
  "autoprefixer": "^9.8.5",
  "cssnano": "^4.1.10",
  "postcss-cli": "^7.1.1",
  "postcss-import": "^12.0.1",
  "stylelint": "^13.6.1",
  "stylelint-config-rational-order": "^0.1.2",
